$annotationWidth = 270px
$centerColMargin = 10px
$lineThickness = 2px
$annotationOffset = -1 * $annotationWidth

.child_checkbox_container md-checkbox:last-of-type
  margin-left 0
  
// reset
a, a:hover, a:visited,  a:active
  color inherit
  text-decoration none
  
section
  padding 20px

p 
  margin-bottom 10px

body
  padding 20px

header, footer
  text-align center
  padding 0 20px

.leftCol
  headingBase()
  flex 3

.centerCol
  flex 14
  min-width 560px
  max-width 900px
  padding 0 $centerColMargin
  position relative
  overflow visible
  clearfix()

.rightCol, 
.annotation
  width $annotationWidth

.annotation
  secondaryFont()
  position absolute
  right $annotationOffset
  border-left 2px solid blue
  padding-left 10px
  

.stdCard
  background rgba(52,152,219,0.2);

.yes-no
  margin-top 10px
  margin-bottom 10px

.income md-input-container  
  margin 0
  