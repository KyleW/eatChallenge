// Variables
$centerColMargin = 10px
$lineThickness = 2px
$annotationWidth = 270px
$annotationOffset = -1 * $annotationWidth
  
// Resets
a, a:hover, a:visited,  a:active
  color inherit
  text-decoration none
  
section
  padding 20px

p 
  margin-bottom 10px

body
  padding 20px

header
  text-align center
  padding 10px 20px
  margin-bottom 20px
  border-bottom 2px solid grey


// Layout
.leftCol
  headingBase()
  flex 3

.centerCol
  flex 14
  min-width 560px
  max-width 900px
  padding 0 $centerColMargin
  position relative
  overflow visible
  clearfix()

.rightCol
  width $annotationWidth
  
// Directives
.annotation
  width $annotationWidth
  secondaryFont()
  position absolute
  right $annotationOffset
  border-left $lineThickness solid blue
  padding-left 10px
  
