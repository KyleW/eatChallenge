// Variables
$centerColMargin = 10px
$lineThickness = 2px
$annotationWidth = 300px
$annotationOffset = -1 * $annotationWidth
$headerHeight = 100px 

// Resets
a, a:hover, a:visited,  a:active
  color inherit
  text-decoration none

h3
  margin-top 8px
  margin-bottom 8px
  
body
  padding 1px 20px

p 
  margin-bottom 10px

section
  padding 20px

header
  text-align center
  padding 10px 20px
  margin-top -1px
  margin-bottom 20px
  border-bottom 2px solid grey
  width 100%
  position fixed
  z-index 100
  background $backgroundColor 
  height $headerHeight

.mainContainer
  margin-top $headerHeight
  
.leftCol
  headingBase()
  flex 3

.centerCol
  flex 14
  min-width 660px
  max-width 900px
  padding 0 $centerColMargin
  position relative
  overflow visible
  clearfix()

.rightCol
  width $annotationWidth
  
// Directives
.annotation
  secondaryFont()
  width $annotationWidth
  position absolute
  right $annotationOffset
  border-left $lineThickness solid blue
  padding-left 10px
  
  ul
    list-style-type disc
    margin 14px 0
    padding-left 20px

  li
    margin 14px 14px
    padding-left 20px

  
